    <div class="modal" id="OrderRequestForm" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Customer Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="closeFormModal()"></button>
                </div>
                <div class="modal-body">
                    <form method="post" enctype="multipart/form-data" id="FormId">
                        <div class="col-lg-8 offset-2">
                            <div class="col-lg-10">
                                <label>Name</label>
                                <input type="text" class="form-control form-control-sm" name="Name" id="Name" placeholder="Enter Name" required />
                            </div>
                            <div class="col-lg-10">
                                <label>moblie</label>
                                <input type="text" class="form-control form-control-sm" name="Mobile" id="Mobile" placeholder="Enter Mobile" required />
                            </div>
                            <div class="col-lg-10">
                                <label>Email</label>
                                <input type="text" class="form-control form-control-sm" name="Email" id="Email" placeholder="Enter Email" required />
                            </div>
                            <input type="hidden" id="NewImagePath" />

                            <button type="submit" class="btn btn-primary" id="Done">Done</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="closeFormModal()">Close</button>

                </div>
            </div>
        </div>
    </div>


    <script>

        $(document).ready(function () {

            $('#Done').on('click', function (e) {
                var valid = true;
                $('#FormId [required]').each(function (val) {
                    if (!$(this).val() || $(this).is(':invalid')) valid = false;
                })

                if (valid == true) {
                    e.preventDefault();

                    var o = {
                        NAME: $('#Name').val(), MOBILENUMBER: $('#Mobile').val(), EMAILID: $('#Email').val(), LOCATION: $('#NewImagePath').val()

                    };


                    $.ajax({
                        type: 'Post',
                        url: '/Home/AddImage',
                        data: JSON.stringify(o),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            if (result == "Success") {
                                closeFormModal();
                            }
                            alert("Request Has Been submited will contact shortly");

                        }

                    });


                }
            });
        });
        function closeFormModal() {
            document.getElementById("OrderRequestForm").style.display = "none";
            $('#Name').val('');
            $('#Mobile').val('');
            $('#Email').val('');
            $('#NewImagePath').val('');
        }
        function openModal(val) {
            document.getElementById("myModal").style.display = "block";

            var x = document.createElement('img');
            x.src = val;
            x.style.height = "400px";
            x.style.width = "400px";
            $('#DImage').html(x);
        }

        function MakeOrder(Value) {

            var imgPath = $(Value)[0].previousElementSibling.src;
            console.log(imgPath);
            var x = imgPath.split('/ARDHANARISHAVAR/');
            console.log(x);
            var newPath = '/ARDHANARISHAVAR/'.concat(x[1]);
            console.log(newPath);
            $('#NewImagePath').val(newPath);
            document.getElementById("OrderRequestForm").style.display = "block";

        }


        function closeModal() {
            document.getElementById("myModal").style.display = "none";
        }

              
    </script>


